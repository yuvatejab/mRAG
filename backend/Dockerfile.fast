# Backend Dockerfile - ULTRA FAST VERSION
# This version sacrifices some build optimization for speed
# Total build time: ~3-5 minutes (vs 15+ minutes)

FROM python:3.10-slim

WORKDIR /app

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_DEFAULT_TIMEOUT=100 \
    TESSERACT_PATH=/usr/bin/tesseract \
    POPPLER_PATH=/usr/bin

# Install system dependencies
RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    poppler-utils \
    libmagic1 \
    curl \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-docker.txt .

# Install ALL packages in ONE command - faster but less cacheable
# Pip will resolve dependencies in parallel
RUN pip install --upgrade pip setuptools wheel && \
    pip install \
    fastapi==0.109.0 \
    uvicorn[standard]==0.27.0 \
    python-multipart==0.0.6 \
    pydantic==2.5.3 \
    pydantic-settings==2.1.0 \
    sqlalchemy==2.0.25 \
    python-dotenv==1.0.0 \
    websockets==12.0 \
    pytesseract==0.3.10 \
    pdf2image==1.17.0 \
    pillow==10.2.0 \
    groq \
    chromadb==0.4.22 \
    torch --index-url https://download.pytorch.org/whl/cpu \
    sentence-transformers \
    langchain \
    langchain-community \
    langchain-chroma \
    langchain-huggingface \
    langchain-groq \
    "unstructured[pdf]==0.11.8"

# Copy application code
COPY . .

# Create directories
RUN mkdir -p uploads chroma_data

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["python", "-m", "app.main"]
